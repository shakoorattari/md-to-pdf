{
  "name": "md2pdf-mermaid",
  "version": "1.0.0",
  "description": "Convert Markdown files with Mermaid diagrams to PDF - A production-ready CLI tool and library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "md2pdf": "dist/cli.js",
    "md2pdf-mermaid": "dist/cli.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "markdown",
    "pdf",
    "mermaid",
    "diagrams",
    "converter",
    "cli",
    "documentation",
    "flowchart",
    "sequence-diagram"
  ],
  "author": "Shakoor Hussain",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/shakoorhussain/md2pdf-mermaid.git"
  },
  "bugs": {
    "url": "https://github.com/shakoorhussain/md2pdf-mermaid/issues"
  },
  "homepage": "https://github.com/shakoorhussain/md2pdf-mermaid#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "chokidar": "^3.6.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.4.5",
    "gray-matter": "^4.0.3",
    "marked": "^12.0.2",
    "md-to-pdf": "^5.2.4",
    "ora": "^5.4.1",
    "puppeteer": "^23.11.1",
    "tmp-promise": "^3.0.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
